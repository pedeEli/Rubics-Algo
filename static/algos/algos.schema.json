{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Collection of algorithms",
    "description": "used for vscode and maybe validation in the future",
    
    "type": "array",
    "items": {
        "type": "object",
        "required": ["turns"],
        "properties": {
            "description": { "type": "string" },
            "turns": {
                "type": "array",
                "items": {
                    "oneOf": [
                        { "$ref": "#/$defs/turn" },
                        { "$ref": "#/$defs/turnGroup" }
                    ]
                }
            }
        }
    },

    "$defs": {
        "turn": {
            "oneOf": [
                {
                    "type": "object",
                    "required": ["side", "prime", "double"],
                    "properties": {
                        "side": { "$ref": "#/$defs/fullHandSide" },
                        "prime": { "type": "boolean" },
                        "double": { "type": "boolean" }
                    }
                },
                {
                    "type": "object",
                    "required": ["side", "prime", "double"],
                    "properties": {
                        "side": { "$ref": "#/$defs/singleFingerSide" },
                        "prime": { "type": "boolean" },
                        "double": { "const": false },
                        "info": { "$ref": "#/$defs/singleTurnInfo"}
                    }
                },
                {
                    "type": "object",
                    "required": ["side", "prime", "double"],
                    "properties": {
                        "side": { "$ref": "#/$defs/singleFingerSide" },
                        "prime": { "type": "boolean" },
                        "double": { "const": true },
                        "info": { "$ref": "#/$defs/doubleTurnInfo"}
                    }
                }
            ]
        },
        "fullHandSide": {
            "enum": ["R", "r", "L", "l"]
        },
        "singleFingerSide": {
            "enum": ["U", "u", "D", "d", "F", "f", "B", "b", "x", "y", "z", "M", "E", "S"]
        },
        "finger": {
            "enum": ["Thumb", "Index Finger", "Middle Finger", "Ring Finger", "Pinky Finger"]
        },
        "hand": {
            "enum": ["Left Hand", "Right Hand"]
        },
        "singleTurnInfo": {
            "type": "object",
            "required": ["finger", "hand"],
            "properties": {
                "finger": { "$ref": "#/$defs/finger" },
                "hand": { "$ref": "#/$defs/hand" }
            }
        },
        "doubleTurnInfo": {
            "type": "object",
            "required": ["first", "second"],
            "properties": {
                "first": { "$ref": "#/$defs/singleTurnInfo" },
                "second": { "$ref": "#/$defs/singleTurnInfo" }
            }
        },
        "turnGroup": {
            "type": "object",
            "required": ["turns"],
            "properties": {
                "info": { "type": "string" },
                "turns": {
                    "type": "array",
                    "items": { "$ref": "#/$defs/turn" }
                }
            }
        }
    }
}